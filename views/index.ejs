<%- include('partials/header', { title: 'Welcome to The Inner Circle' }) %>

<div class="container main-content">
  <div
    class="d-flex flex-column align-items-center justify-content-center text-center"
  >
    <div class="py-5">
      <h1 class="display-4 fw-bold lh-1 mb-3">
        Welcome to
        <span style="color: var(--secondary-color)">The Inner Circle</span>
      </h1>
      <p class="lead">
        A private and secure place for members to share their thoughts and
        connect with like-minded individuals.
      </p>
      <% if (typeof user === 'undefined' || !user) { %>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/register" class="btn btn-primary btn-lg px-4 me-md-2"
          >Get Started</a
        >
        <a href="/login" class="btn btn-outline-secondary btn-lg px-4">Login</a>
      </div>
      <% } else { %>
      <a href="/dashboard" class="btn btn-primary btn-lg px-4"
        >Go to Dashboard</a
      >
      <% } %>
    </div>
  </div>

  <hr class="my-5" />

  <div class="row text-center">
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div
            class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3"
            style="
              width: 50px;
              height: 50px;
              display: inline-flex;
              align-items: center;
              justify-content: center;
              font-size: 24px;
              background-color: var(--secondary-color) !important;
            "
          >
            <i class="fas fa-lock"></i>
          </div>
          <h3 class="h4 fw-bold">Exclusive Content</h3>
          <p class="mb-0">
            Only members can see the content shared by others. Your privacy is
            our priority.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div
            class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3"
            style="
              width: 50px;
              height: 50px;
              display: inline-flex;
              align-items: center;
              justify-content: center;
              font-size: 24px;
              background-color: var(--secondary-color) !important;
            "
          >
            <i class="fas fa-star"></i>
          </div>
          <h3 class="h4 fw-bold">Become a Member</h3>
          <p class="mb-0">
            Unlock full access by becoming a member and start sharing your own
            messages.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div
            class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3"
            style="
              width: 50px;
              height: 50px;
              display: inline-flex;
              align-items: center;
              justify-content: center;
              font-size: 24px;
              background-color: var(--secondary-color) !important;
            "
          >
            <i class="fas fa-shield-alt"></i>
          </div>
          <h3 class="h4 fw-bold">Admin Moderation</h3>
          <p class="mb-0">
            Admins have the ability to manage content, ensuring a safe and
            respectful community.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
