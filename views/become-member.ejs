<%- include('partials/header', { title: 'Become a Member' }) %>

<div class="container main-content">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Become a Full Member</h2>
            <p class="text-muted">
              Unlock full access by entering the secret passcode.
            </p>
          </div>

          <% if (user.is_member) { %>
          <div class="alert alert-success text-center" role="alert">
            <h4 class="alert-heading">
              <i class="fas fa-check-circle me-2"></i>You Are Already a Member!
            </h4>
            <p>You have full access to all community features.</p>
            <hr />
            <a href="/dashboard" class="btn btn-primary"
              ><i class="fas fa-tachometer-alt me-1"></i>Go to Dashboard</a
            >
          </div>
          <% } else { %>
          <form action="/become-member" method="post">
            <div class="form-floating mb-3">
              <input
                type="password"
                class="form-control"
                id="secret_code"
                name="secret_code"
                placeholder="Secret Passcode"
                required
              />
              <label for="secret_code">Secret Passcode</label>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-lock-open me-2"></i>Unlock Membership
              </button>
            </div>
          </form>
          <div class="container mt-5">
            <div class="row justify-content-center">
              <div class="col-md-6">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h1 class="card-title text-center mb-4">Become a Member</h1>

                    <% if (user.is_member) { %>
                    <div class="alert alert-success text-center">
                      <p class="mb-0">
                        Welcome, valued member! You already have full access.
                      </p>
                      <a href="/dashboard" class="alert-link"
                        >Go to Dashboard</a
                      >
                    </div>
                    <% } else { %> <% if (locals.error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                    <% } %> <% if (locals.successMessage) { %>
                    <div class="alert alert-success"><%= successMessage %></div>
                    <% } %>

                    <form action="/become-member" method="POST">
                      <div class="mb-3">
                        <label for="secret_code" class="form-label"
                          >Enter Secret Passcode</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="secret_code"
                          name="secret_code"
                          required
                        />
                      </div>
                      <button type="submit" class="btn btn-primary w-100">
                        Join the Inner Circle
                      </button>
                    </form>
                    <hr />
                    <div class="text-center">
                      <p>Don't have the code?</p>
                      <a href="/get-the-code" class="btn btn-outline-secondary"
                        >Solve the Riddle</a
                      >
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
