<%- include('partials/header', { title: 'Become a Member' }) %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body p-4 p-md-5 text-center">
        <i class="fas fa-star fa-3x text-warning mb-3"></i>
        <h2 class="fw-bold">Become a Member</h2>
        <p class="text-muted">
          Enter the secret code to unlock full access to The Inner Circle.
        </p>
        <form action="/become-member" method="post" class="mt-4">
          <div class="form-floating mb-3">
            <input
              type="password"
              class="form-control"
              id="secret_code"
              name="secret_code"
              placeholder="Secret Code"
              required
            />
            <label for="secret_code">Secret Code</label>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
              Unlock Membership
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
