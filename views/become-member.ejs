<%- include('partials/header', { title: 'Become a Member' }) %>

<div class="container main-content">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Become a Full Member</h2>
            <p class="text-muted">
              Unlock full access by entering the secret passcode.
            </p>
          </div>

          <% if (locals.error && locals.error.length > 0) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
          >
            <%= Array.isArray(error) ? error.join(', ') : error %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %> <% if (user.is_member) { %>
          <div class="alert alert-success text-center" role="alert">
            <h4 class="alert-heading">
              <i class="fas fa-check-circle me-2"></i>You Are Already a Member!
            </h4>
            <p>You have full access to all community features.</p>
            <hr />
            <a href="/messages" class="btn btn-primary">
              <i class="fas fa-tachometer-alt me-1"></i>Go to Dashboard
            </a>
          </div>
          <% } else { %>
          <form action="/become-member" method="post">
            <div class="form-floating mb-3">
              <input
                type="password"
                class="form-control"
                id="secret_code"
                name="secret_code"
                placeholder="Secret Passcode"
                required
              />
              <label for="secret_code">Secret Passcode</label>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-lock-open me-2"></i>Unlock Membership
              </button>
            </div>
          </form>
          <hr />
          <div class="text-center">
            <p>Don't have the code?</p>
            <a href="/get-the-code" class="btn btn-outline-secondary">
              Solve the Riddle to Get It
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
